@model BloomSoft_V2.Models.Edicion
@{
    ViewBag.Title = "Edit3";
}


<h2>Edición de verbos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        <div class="row">
            <div class="col-md-9 col-md-offset-3">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.verbotarjetaModels1.id_verbostarjeta)
                @Html.HiddenFor(model => model.verbotarjetaModels1.id_tarjetaRequerim)

                <div class="form-group">
                    @Html.LabelFor(model => model.verbotarjetaModels1.id_verbo, "id_verbo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.verbotarjetaModels1.id_verbo, ViewBag.id_verbo as SelectList, Model.verbotarjetaModels1.id_verbo)
                        @Html.ValidationMessageFor(model => model.verbotarjetaModels1.id_verbo, "", new { @class = "text-danger" })
                    </div>
                </div>

                

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Volver al juego", "GameBoard", "Home")
    </div>
