<h2>Requerimientos</h2>


<div class="col-xs-4">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Proyecto</th>
                    <th>Descripcion</th>
                    <th></th>

                </tr>
            </thead>
            @foreach (var item in Model.requerimientoModels)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proyecto.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar Tarjeta", "Create", new { id_t = Model.tarjetaModels.Last().id_tarjetaRequerim, id_r = item.id_requerimiento })

                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div class="col-xs-3">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>categoria</th>
                    <th>tiempo</th>
                    <th>dificultad</th>
                </tr>
            </thead>
            @foreach (var item in Model.tarjetaModels)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Taxonomia.categoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tiempo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dificultad)
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    </div>
</div>

<div class="col-xs-2">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>descripcion</th>
                </tr>
            </thead>
            @foreach (var item in Model.tareaModels)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>

<div class="col-xs-2">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>verbos</th>
                </tr>
            </thead>
            @foreach (var item in Model.verbotarjetaModels)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Verbotax.verbos)
                        </td>
                    </tr>
                </tbody>
            }

        </table>
    </div>
</div>

<div>
    @Html.ActionLink("Volver al juego", "GameBoard", "Home")
</div>




