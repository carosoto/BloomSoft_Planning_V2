<script src="bootstrap/js/bootstrap.min.js"></script>


<style>
    .inlineTable {
        display: inline-block;
    }

    .table2 {
        margin-left: 35%;
        margin-top: -135px;
    }

    .table3 {
        margin-left: 70%;
        margin-top: -130px;
    }

    .button2 {
        padding-bottom: 2%;
        padding-right: 15%;
        padding-top: 2%;
        padding-left: 15%;
        background-color: transparent;
        font-size: 18px;
        color: white;
        border: 2px solid white;
        text-decoration: none;
    }


        .button2:hover {
            background-color: #3b3879;
            color: white;
            border: 2px solid #3b3879;
