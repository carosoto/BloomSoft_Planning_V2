@model BloomSoft_V2.Models.Verbotax

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<!--formato para editar los valores de la tabla Verbotax-->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Verbotax</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_verbo)

        <div class="form-group">
            @Html.LabelFor(model => model.nivel_tax, "nivel_tax", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("nivel_tax", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nivel_tax, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
