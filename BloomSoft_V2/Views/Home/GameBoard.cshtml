            }

        div.compr {
            width: 190px;
            height: 190px;
            background-image: url('../Imagenes/Comprension.png');
            background-repeat: no-repeat;
        }

            div.compr:hover {
                background-image: url('../Imagenes/ComprensionHov.png');
                background-repeat: no-repeat;
            }

        div.analisis {
            width: 150px;
            height: 190px;
            background-image: url('../Imagenes/Analisis.png');
            background-repeat: no-repeat;
        }

            div.analisis:hover {
                background-image: url('../Imagenes/AnalisisHov.png');
                background-repeat: no-repeat;
            }

        div.eval {
            margin-right: 180px;
            width: 150px;
            height: 190px;
            background-image: url('../Imagenes/Evaluacion.png');
            background-repeat: no-repeat;
        }

            div.eval:hover {
                background-image: url('../Imagenes/EvaluacionHov.png');
                background-repeat: no-repeat;
            }

        div.aplic {
            width: 150px;
            height: 190px;
            background-image: url('../Imagenes/Aplicacion.png');
            background-repeat: no-repeat;
        }

            div.aplic:hover {
                background-image: url('../Imagenes/AplicacionHov.png');
                background-repeat: no-repeat;
            }

        div.sint {
            width: 150px;
            height: 190px;
            background-image: url('../Imagenes/Sintesis.png');
            background-repeat: no-repeat;
        }

            div.sint:hover {
                background-image: url('../Imagenes/SintesisHov.png');
                background-repeat: no-repeat;
            }



        div.edit {
            width: 200px;
            height: 150px;
            background-image: url('../Imagenes/boton_tarjeta1.png');
            background-repeat: no-repeat;
            background-size: 180px 140px;
        }

            div.edit:hover {
                background-image: url('../Imagenes/boton tarjetaHov1.png');
                background-repeat: no-repeat;
            }

        div.lanzar {
            width: 100px;
            height: 150px;
            background-image: url('../Imagenes/carta.jpg');
            background-repeat: no-repeat;
            background-size: 90px 140px;
        }

            div.lanzar:hover {
                background-image: url('../Imagenes/cartaHov.jpg');
                background-repeat: no-repeat;
            }

        #myImg {
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

            #myImg:hover {
                opacity: 0.7;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.9);
        }

        .modal-content {
            margin: auto;
            display: block;
            width: 80%;
            max-width: 700px;
        }

        #caption {
            margin: auto;
            display: block;
            width: 80%;
            max-width: 700px;
            text-align: center;
            color: #ccc;
            padding: 10px 0;
            height: 150px;
        }

        .modal-content, #caption {
            -webkit-animation-name: zoom;
            -webkit-animation-duration: 0.6s;
            animation-name: zoom;
            animation-duration: 0.6s;
        }

        .close {
            position: absolute;
            top: 45px;
            right: 35px;
            color: #f1f1f1;
            font-size: 40px;
            font-weight: bold;
            transition: 0.3s;
        }

            .close:hover,
            .close:focus {
                color: #bbb;
                text-decoration: none;
                cursor: pointer;
            }

        div.jugador {
            width: 60px;
            height: 60px;
            background-image: url('../Imagenes/usuario_azul.png');
            background-repeat: no-repeat;
            background-size: 60px 60px;
        }

        div.jugadoractivo {
            width: 60px;
            height: 60px;
            background-image: url('../Imagenes/usuario_rojo.png');
            background-repeat: no-repeat;
            background-size: 60px 60px;
        }
    </style>


</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                    <span class="glyphicon glyphicon-folder-close">
                                    </span> Requerimientos
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <table class="table">
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Muestra","Edicion")">Agregar/Ver Requerimientos</a>

                                        </td>

                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                                    <span class="glyphicon glyphicon-folder-close">
                                    </span> Resultado
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <table class="table">
                                    <tr>
                                        <td>
                                            <a href="#">Generar Resultados</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="#">Exportar</a>
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                    <span class="glyphicon glyphicon-th">
                                    </span>Equipo

                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <lu class="list-group">
                                    @foreach (var partida in Model)
                                    {
                                        if (id_partida == partida.id_partidaJuego)
                                        {
                                            <td>
                                                @partida.AspNetUsers.UserName
                                            </td>
                                        }
                                    }
                                </lu>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
                                    <span class="glyphicon glyphicon-th">
                                    </span>Taxonomia de Bloom
                                    <img id="myImg" src="~/Content/imagenes/TaxBloom.jpg" alt="Taxonomía de Bloom" style="width:100%;max-width:300px">
                                </a>
                            </h4>
                        </div>

                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" onclick="location.href='@Url.Action("Index","Home")'">
                                    <span class="glyphicon glyphicon-th">
                                    </span>Salir del Juego
                                </a>
                            </h4>
                        </div>

                    </div>
                </div>
            </div>

            <div id="myModal" class="modal">
                <span class="close">&times;</span>
                <img class="modal-content" id="img01">
                <div id="caption"></div>
            </div>

            <script>
                var modal = document.getElementById("myModal");

                var img = document.getElementById("myImg");
                var modalImg = document.getElementById("img01");
                var captionText = document.getElementById("caption");
                img.onclick = function () {
                    modal.style.display = "block";
                    modalImg.src = this.src;
                    captionText.innerHTML = this.alt;
                }

                var span = document.getElementsByClassName("close")[0];

                span.onclick = function () {
                    modal.style.display = "none";
                }
            </script>

