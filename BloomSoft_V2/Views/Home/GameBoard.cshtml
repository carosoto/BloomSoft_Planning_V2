        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .container {
            padding: 2px 16px;
        }

        .modal-content {
            border: 4px solid #3b3879;
        }

        input[type=text] {
            border: 4px solid #3b3879;
        }

        textarea {
            border: 4px solid #3b3879;
            width: 100%;
            height: 100px;
        }

        select {
            border: 4px solid #3b3879;
            width: 100%;
            height: 40px;
        }

        .min {
