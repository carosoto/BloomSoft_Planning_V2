            <div class="column">
                <div class="card">
                    <img src="~/Imagenes/Analisis.png" class="card-img-top" alt="Analisis">
                </div>
            </div>

            <div class="column">
                <div class="card">
                    <img src="~/Imagenes/Comprension.png" class="card-img-top" alt="Comprension">
                </div>
