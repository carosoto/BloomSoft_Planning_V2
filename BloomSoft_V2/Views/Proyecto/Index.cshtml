@model IEnumerable<BloomSoft_V2.Models.Proyecto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<!--formato para mostrar los valores de la tabla Proyecto-->
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.interaciones)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.interaciones)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_proyecto }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_proyecto }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_proyecto })
            </td>
        </tr>
    }

</table>
